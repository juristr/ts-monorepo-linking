{
  "name": "ts-monorepo-linking",
  "private": true,
  "devDependencies": {
    "typescript": "^5.3.3",
    "tsx": "^4.1.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "tsx --tsconfig tsconfig.base.json apps/myapp/src/index.ts",
    "start": "node apps/myapp/dist/index.js",
    "build": "tsc --build",
    "clean": "tsc --build --clean",
    "typecheck": "tsc --build --emitDeclarationOnly"
  }
}
